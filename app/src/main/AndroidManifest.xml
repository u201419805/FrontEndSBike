<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.bikehub.rentbike">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RentBikeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".viewcontrollers.activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".viewcontrollers.activities.MainActivity"
            android:label="@string/title_activity_main" />
        <activity android:name=".viewcontrollers.activities.OrderActivity" />
        <activity
            android:name=".viewcontrollers.activities.MainOpActivity"
            android:label="@string/title_activity_main_op" />
        <activity
            android:name=".viewcontrollers.activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>